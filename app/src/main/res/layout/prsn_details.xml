<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/id"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:padding="1dp"/>

        <LinearLayout
            android:padding="1dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"></LinearLayout>

        <TextView
            android:id="@+id/name"

            android:textSize="20sp"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Christabella Gracia"
            android:padding="1dp"/>

        <LinearLayout
            android:padding="1dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"></LinearLayout>
        <TextView
            android:id="@+id/bod"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29/01/2014"
            android:padding="1dp"/>

        <LinearLayout
            android:padding="1dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"></LinearLayout>
        <TextView
            android:id="@+id/address"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567891123456789212345678954"
            android:padding="1dp"
            android:maxLength="22"/>

        <LinearLayout
            android:padding="1dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"></LinearLayout>
        <TextView
            android:id="@+id/division"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SM"
            android:padding="1dp"/>
        <LinearLayout
            android:padding="1dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"></LinearLayout>

        <TextView
            android:id="@+id/region"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="region"
            android:padding="1dp"/>


    </LinearLayout>
</RelativeLayout>